@model Category

@{


}


<form method="post" asp-controller="Category" asp-action="Create">
    <div class="border p-3 mt-4">
        
        <h2>Create Category</h2>
        <hr />
        <div asp-validation-summary="All" class="alert-danger"></div>
        <div class="mb-3  row p-1s">
            <label asp-for="Name" class="p-0"></label>
           <input asp-for="Name" type="text" class="form-control" />
           <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
        <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>

    <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to List</a>
            </div>

    </div>

       
        
    </div>

</form>

